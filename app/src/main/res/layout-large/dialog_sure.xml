<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_160"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:background="@drawable/shap_white_10"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_15"
            android:gravity="center"
            android:maxLines="1"
            android:minLines="1"
            android:text="@string/confirm_leave_room_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_10"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_dialog_confirm"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_bg_btn_submit"
            android:gravity="center"
            android:padding="@dimen/dp_7"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/line_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/oval_bg_cancle"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <ImageView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:background="@drawable/ic_close_white_15dp" />


    </LinearLayout>


</LinearLayout>
