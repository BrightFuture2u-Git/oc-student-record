<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    app:hl_cornerRadius="@dimen/dp_5"
    app:hl_shadowColor="#0d000000"
    app:hl_shadowLimit="@dimen/dp_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开课时间：2020-09-29"
            android:textColor="#999999"
            android:textSize="@dimen/sp_7" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="#EAEAEA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_weight="4">

                <io.drew.record.view.ResizableRoundImageView
                    android:id="@+id/iv_cover"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_placeholder_mywork"
                    app:height_model="90"
                    app:mask="true"
                    app:mask_coner="@dimen/dp_5"
                    app:siBorderColor="@color/white"
                    app:siRadius="@dimen/dp_5"
                    app:width_model="130" />
                <ImageView
                    android:id="@+id/iv_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_lock" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_violet_5"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_1"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_1"
                    android:text="第一集"
                    android:textColor="#6A48F5"
                    android:textSize="@dimen/sp_6" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="文字标题"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_9" />

                <TextView
                    android:id="@+id/tv_watched_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="已看过2次"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_7" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</com.lihang.ShadowLayout>
