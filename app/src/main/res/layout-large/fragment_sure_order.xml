<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:hl_shadowColor="#4D4C4C4C"
    app:hl_shadowHiddenBottom="true"
    app:hl_shadowHiddenLeft="false"
    app:hl_shadowHiddenRight="true"
    app:hl_shadowHiddenTop="true"
    app:hl_shadowLimit="@dimen/dp_6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_6"
        android:background="#FBFBFB"
        android:orientation="vertical">

        <include layout="@layout/my_action_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/shap_bg_white_12"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:text="订单信息"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title"
                        android:layout_marginRight="@dimen/dp_43"
                        android:text="[体验课]跟着名师一起逛博物馆"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_8" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title"
                        android:layout_alignParentRight="true"
                        android:text="¥99"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_8" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="开课时间：2020-09-30｜共10节课"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_7" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relay_no_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="@drawable/shap_bg_white_12"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_titel_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货地址"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text="课程教材将寄送至此地址"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_7" />

                    <TextView
                        android:id="@+id/tv_create_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_titel_address"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_23"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:drawableLeft="@drawable/ic_add_blue_10dp"
                        android:text="新建收货地址"
                        android:textColor="#6A48F5"
                        android:textSize="@dimen/sp_8" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relay_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="@drawable/shap_bg_white_12"
                    android:padding="@dimen/dp_10"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_titel_no_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货地址"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:id="@+id/tv_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_2"
                        android:drawableRight="@drawable/arrow_blue"
                        android:drawablePadding="@dimen/dp_2"
                        android:text="修改"
                        android:textColor="#6A48F5"
                        android:textSize="@dimen/sp_7" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_titel_no_address"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="豆花"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_8" />

                    <TextView
                        android:id="@+id/tv_user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_titel_no_address"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_toRightOf="@+id/tv_user_name"
                        android:text="123456789"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_7" />

                    <TextView
                        android:id="@+id/tv_address_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_user_name"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="四川省成都市四川省成都市四川省成都市四川省成都市"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_address_default"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="课程教材将寄送至此地址"
                        android:textColor="#1ED865"
                        android:textSize="@dimen/sp_7" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="@drawable/shap_bg_white_12"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_title_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:text="支付方式"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_9" />

                    <LinearLayout
                        android:id="@+id/line_wechat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title_pay"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_pay_wechat"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="微信支付"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_8" />

                        <ImageView
                            android:id="@+id/iv_status_wechat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_unchecked" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line_alipay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line_wechat"
                        android:layout_marginTop="@dimen/dp_13"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_pay_alipay"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="支付宝"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_8" />

                        <ImageView
                            android:id="@+id/iv_status_alipay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_unchecked" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </ScrollView>


        <com.lihang.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:hl_shadowColor="#1A000000"
            app:hl_shadowHiddenBottom="true"
            app:hl_shadowHiddenLeft="true"
            app:hl_shadowHiddenRight="true"
            app:hl_shadowHiddenTop="false"
            app:hl_shadowLimit="@dimen/dp_3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_needpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="需支付："
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_7" />

                <TextView
                    android:id="@+id/tv_price_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_needpay"
                    android:text="¥49"
                    android:textColor="#FC6212"
                    android:textSize="@dimen/dp_9" />

                <Button
                    android:id="@+id/btn_pay"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_22"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:background="@drawable/shape_bg_btn_submit"
                    android:stateListAnimator="@null"
                    android:text="去支付"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_7" />
            </RelativeLayout>


        </com.lihang.ShadowLayout>
    </LinearLayout>
</com.lihang.ShadowLayout>
