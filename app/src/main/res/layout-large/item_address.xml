<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relay_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@drawable/shap_bg_white_12"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_tag_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#196a48f5"
            android:padding="@dimen/dp_2"
            android:text="默认"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="#6A48F5"
            android:textSize="@dimen/sp_6" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_2"
            android:drawableRight="@drawable/arrow_blue"
            android:drawablePadding="@dimen/dp_2"
            android:text="编辑"
            android:textColor="#6A48F5"
            android:textSize="@dimen/sp_7" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_tag_default"
            android:text="豆花"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_8" />

        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_toRightOf="@+id/tv_user_name"
            android:gravity="center_vertical"
            android:text="123456789"
            android:textColor="#999999"
            android:textSize="@dimen/sp_7" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_name"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_25"
            android:text="四川省成都市四川省成都市四川省成都市四川省成都市"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_7" />
    </RelativeLayout>
</RelativeLayout>
