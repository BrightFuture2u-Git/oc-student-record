<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <include
        android:id="@+id/bar"
        layout="@layout/my_action_bar" />

    <RelativeLayout
        android:id="@+id/relay_termsOfService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar"
        android:layout_marginTop="@dimen/dp_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="服务条款"
            android:textColor="#666666"
            android:textSize="@dimen/sp_8" />

        <ImageView
            android:id="@+id/iv_nickname_more"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/iv_nickname_more"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp_8" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relay_privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relay_termsOfService"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="隐私政策"
            android:textColor="#666666"
            android:textSize="@dimen/sp_8" />

        <ImageView
            android:id="@+id/iv_privacy_policy_more"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/iv_privacy_policy_more"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp_8" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relay_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relay_privacy_policy"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清除缓存"
            android:textColor="#666666"
            android:textSize="@dimen/sp_8" />

        <ImageView
            android:id="@+id/iv_clear_more"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right" />

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/iv_clear_more"
            android:text="1.5M"
            android:textColor="#CDCDCD"
            android:textSize="@dimen/sp_7" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relay_checkUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relay_clear"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="检查更新"
            android:textColor="#666666"
            android:textSize="@dimen/sp_8" />

        <ImageView
            android:id="@+id/iv_checkUpdate_more"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right" />

        <TextView
            android:id="@+id/tv_newVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/iv_checkUpdate_more"
            android:text="已是最新版本"
            android:textColor="#CDCDCD"
            android:textSize="@dimen/sp_7" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relay_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relay_checkUpdate"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="意见反馈"
            android:textColor="#666666"
            android:textSize="@dimen/sp_8" />

        <ImageView
            android:id="@+id/iv_feedback_more"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/iv_feedback_more"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp_8" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relay_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relay_feedback"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="关于画了么"
            android:textColor="#666666"
            android:textSize="@dimen/sp_8" />

        <ImageView
            android:id="@+id/iv_about_more"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/iv_about_more"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp_8" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line_contactUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relay_about"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="联系我们"
            android:textColor="#666666"
            android:textSize="@dimen/sp_8" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="400-098-7566"
            android:textColor="#CDCDCD"
            android:textSize="@dimen/sp_7" />

        <ImageView
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@drawable/ic_right" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_25"
        android:background="@drawable/shap_violet_20"
        android:stateListAnimator="@null"
        android:text="退出登录"
        android:textColor="#6A48F5"
        android:textSize="@dimen/sp_9" />
</RelativeLayout>
