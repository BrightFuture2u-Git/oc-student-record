<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_42"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableTop="@drawable/selector_ic_home"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_7" />

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:drawableTop="@drawable/selector_ic_record"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:text="我的课程"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_7" />

        <TextView
            android:id="@+id/tv_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:drawableTop="@drawable/selector_ic_gallery"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:text="画廊"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_7" />

        <TextView
            android:id="@+id/tv_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:drawableTop="@drawable/selector_ic_mine"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:text="个人中心"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_7" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/line_changeBaby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/head_user_placeholder" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="请登录"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_7" />
    </LinearLayout>

</LinearLayout>
