<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="io.drew.record.activitys.VerticalLoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_login_left" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_login_right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_login_icon" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_35"
                android:background="@drawable/shape_bg_btn_input_phone"
                android:hint="输入手机号"
                android:inputType="phone"
                android:padding="@dimen/dp_15"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_35"
                android:background="@drawable/shape_bg_btn_input_phone"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_bg_btn_input_phone"
                    android:hint="输入验证码"
                    android:inputType="number"
                    android:padding="@dimen/dp_15"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_getCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="获取验证码"
                    android:textColor="#7350F5"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_35"
                android:stateListAnimator="@null"
                android:background="@drawable/shape_bg_btn_input"
                android:clickable="false"
                android:padding="@dimen/dp_15"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:gravity="center"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>
