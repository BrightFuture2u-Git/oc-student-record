<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bgshadow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:hl_shadowColor="#4D4C4C4C"
    app:hl_shadowHiddenBottom="true"
    app:hl_shadowHiddenLeft="false"
    app:hl_shadowHiddenRight="true"
    app:hl_shadowHiddenTop="true"
    app:hl_shadowLimit="@dimen/dp_6">

    <LinearLayout
        android:id="@+id/line_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_6"
        android:orientation="vertical">

        <include layout="@layout/my_action_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FBFBFB"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1a999999"
                    android:gravity="center"
                    android:padding="@dimen/dp_4"
                    android:text="为保证快递及时送达，请确保收货地址准确,电话畅通"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="收货人"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_7" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="@null"
                    android:hint="请输入"
                    android:textColor="@color/black"
                    android:textColorHint="#CDCDCD"
                    android:textSize="@dimen/sp_9" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="#EAEAEA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="手机号"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_7" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="@null"
                    android:hint="请输入"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:textColorHint="#CDCDCD"
                    android:textSize="@dimen/sp_9" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="#EAEAEA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="所在地区"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_7" />

                <TextView
                    android:id="@+id/tv_address_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:drawableRight="@drawable/picture_icon_more"
                    android:hint="请选择"
                    android:textColor="@color/black"
                    android:textColorHint="#CDCDCD"
                    android:textSize="@dimen/sp_9" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="#EAEAEA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="详细地址"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_7" />

                <EditText
                    android:id="@+id/et_address_else"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="@null"
                    android:hint="请输入"
                    android:textColor="@color/black"
                    android:textColorHint="#CDCDCD"
                    android:textSize="@dimen/sp_9" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="#EAEAEA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_weight="1"
                        android:text="设为默认地址"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_7" />

                    <ImageView
                        android:id="@+id/switchBtn"
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_13"
                        android:layout_marginRight="@dimen/dp_8"
                        android:src="@drawable/switch_off" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/btn_delect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/shape_bg_btn_input"
                    android:gravity="center"
                    android:padding="@dimen/dp_7"
                    android:text="删除地址"
                    android:textColor="#6A48F5"
                    android:textSize="@dimen/sp_9" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</com.lihang.ShadowLayout>
